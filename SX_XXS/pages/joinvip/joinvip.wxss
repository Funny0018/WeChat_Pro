/* pages/joinvip/joinvip.wxss */

.joinVip {
  width: 100%;
  height: 800rpx;
  /* background-color: #333; */
  margin-top: 300rpx;
}

.bottom {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  /* box-shadow: 10rpx 10rpx 10rpx 10rpx #666; */
}

.bottomLeft {
  float: left;
  width: 100%;
  height: 130rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
}

.bottomPrice {
  color: #000;
  height: 50rpx;
  font-size: 35rpx;
}

.bottomFullname {
  height: 50rpx;
  font-size: 30rpx;
}

.bottomRight {
  background: url('https://xxs.xixiansheng.cn/WX_JVXXS/wxStatic/images/joinvip/submit.png') no-repeat;
  background-size: 100% 100%;
  position: absolute;
  bottom: 80rpx;
  color: #714f1f;
  height: 100rpx;
  line-height: 100rpx;
  width: 90%;
  margin-left: 5%;
  border-radius: 60rpx;
  text-align: center;
}

.checkVip {
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
}

.checktitle {
  margin-top: 30rpx;
}

.scroll-header {
  height: 250rpx;
  display: flex;
  white-space: nowrap; /* 这个很重要， */
  z-index: 999;
  background-color: #fff;
  position: fixed;
  margin-top: 30rpx;
}

.vipView {
  background-color: #f5f5f5;
  width: 33%;
  height: 250rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  display: inline-block; /*  这个也很重要 */
  text-align: center;
  box-sizing: border-box;
  position: relative;
}

.l-mycheck {
  right: 10rpx;
  top: 10rpx;
  position: absolute;
}

.vipname {
  margin-top: 90rpx;
  font-size: 35rpx;
}

.priceview {
  text-align: center;
  font-size: 35rpx;
  margin-top: 30rpx;
  width: 100%;
  float: left;
}

.vipprice {
  font-size: 35rpx;
}

.oldprice {
  font-size: 30rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.active {
  background-color: #faedd1;
  color: #6b3c12;
}

.vip-Top {
  height: 150rpx;
  width: 100%;
  background-color: #2c2525;
}

.btnGetuserInfo {
  color: #fff;
  margin-left: auto;
  margin-right: auto;
  font-size: 40rpx;
  /* background-color: #f60; */
  background: none;
  border: none;
  width: 300rpx;
}

.btnGetuserInfo::after {
  border: none;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  border-radius: 50%;
  float: left;
}

.userinfo-nickname {
  height: 100rpx;
  width: 300rpx;
  margin-top: 40rpx;
  margin-left: 30rpx;
  font-size: 50rpx;
  color: #fff;
  font-weight: 500;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.isVip {
  float: left;
  font-size: 25rpx;
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #ddd;
  border-radius: 25rpx;
  border: solid #ddd 1rpx;
  text-align: center;
  margin-top: 50rpx;
  margin-left: 20rpx;
  font-weight: 700;
}

.loginImage {
  width: 19%;
  height: 100%;
  float: left;
  position: relative;
}

.payChoose {
  width: 100%;
  height: 200rpx;
  margin-left: 5%;
}

.payChoose image {
  width: 75rpx;
  height: 75rpx;
  float: left;
  margin-top: 10rpx;
}

.vipHead {
  width: 50rpx;
  height: 50rpx;
  right: 0;
  top: 0;
  position: absolute;
}

.line::after {
  content: '';
  position: absolute;
  display: block;
  margin-top: 40rpx;
  margin-left: 0;
  height: 1px;
  width: 90%;
  background-color: rgba(180, 180, 180, 0.3);
}

.payChooseInfo {
  width: 75%;
  height: 200rpx;
  float: left;
  margin-left: 20rpx;
  position: relative;
}

.payChooseTop {
  font-size: 35rpx;
}

.payChooseBottom {
  font-size: 25rpx;
  color: #969696;
}

.payChooseIcon {
  float: left;
  margin-left: -200rpx;
  z-index: 999;
  width: 50rpx;
  height: 50rpx;
}
.xianshi{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 0;
  top: 0;
}