page {
  background-color: #eee;
}

.searchTop {
  width: 100%;
  height: 70rpx;
  background-color: #f60;
  line-height: 70rpx;
  position: fixed;
  top: 0;
  z-index: 10;
}

.searchImg {
  height: 40rpx;
  width: 40rpx;
  position: fixed;
  top: 20rpx;
  left: 10rpx;
}

.search {
  height: 50rpx;
  margin-top: 10rpx;
  outline: none;
  border: none;
  border-radius: 0.8rem;
  padding-left: 1.4rem;
  padding-right: 0.5rem;
  color: #fff;
  background: #ff944d;
  background-size: 0.8rem;
  font-size: 30rpx;
  width: 75%;
  display: inline-block;
}

.butSearch {
  float: right;
  height: 70rpx;
  width: 12%;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  margin-top: 0;
  color: #fff;
}

.productList {
  /* background-color: #f60; */
  background-color: #fff;
  margin-top: 80rpx;
  /* height: 30rem; */
}

.productItem {
  background-color: #fff;
  /* border-bottom: #f60 solid 0.1rem; */
  height: 250rpx;
  width: 100%;
}

.isBottom {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #ddd;
  text-align: center;
  padding-bottom: 20rpx;
}

.productImgView {
  float: left;
  height: 100%;
  width: 30%;
}

.productImg {
  width: 220rpx;
  height: 220rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.productInfoView {
  float: left;
  /* padding-left: 1rem; */
  margin-left: 40rpx;
  width: 30%;
  height: 100%;
}

.productName {
  width: 450rpx;
  margin-top: 0.5rem;
  font-size: 30rpx;
  font-weight: 800;
  margin-left: 10rpx;
  float: left;
  position: absolute;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
  
  word-wrap:break-word;
}

.productDesc {
  width: 450rpx;
  margin-top: 2.8rem;
  font-size: 30rpx;
  margin-left: 10rpx;
