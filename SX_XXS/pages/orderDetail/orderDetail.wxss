/* pages/orderDetail/orderDetail.wxss */

page {
  background-color: #eee;
}

.head {
  height: 230rpx;
  background-color: #fff;
}

.headimgview {
  width: 100rpx;
  height: 100rpx;
  margin-left: 30%;
  float: left;
  margin-top: 20rpx;
}

.headImg {
  height: 70rpx;
  width: 70rpx;
}

.headtext {
  width: 400rpx;
  height: 100rpx;
  font-size: 40rpx;
  float: left;
  margin-top: 30rpx;
}

.headbtn {
  width: 50%;
  height: 70rpx;
  font-size: 28rpx;
}

.deliveryaddress-info {
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.products-info {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.order-info {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.info-head {
  height: 100rpx;
  width: 400rpx;
  margin-left: 2%;
  font-size: 40rpx;
  line-height: 100rpx;
}

.addressname {
  height: 50rpx;
  font-size: 35rpx;
  width: 98%;
  margin-left: 2%;
}

.addresscity {
  height: 50rpx;
  font-size: 25rpx;
  width: 98%;
  margin-left: 2%;
  color: #ccc;
}

.productImg {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
  border: 1rpx solid #ddd;
}

.product-right {
  width: 200rpx;
  float: right;
  height: 150rpx;
  font-size: 30rpx;
  margin-top: -250rpx;
}

.product-right text {
  float: right;
  width: 110rpx;
  margin-top: 60rpx;
  margin-right: 10rpx;
}

.product-right image {
  margin-right: 10rpx;
  margin-top: 55rpx;
  float: right;
  width: 50rpx;
  height: 50rpx;
}

.billno {
  height: 80rpx;
  width: 96%;
  margin-left: 2%;
  font-size: 30rpx;
  color: #ccc;
}

.billdate {
  height: 50rpx;
  width: 96%;
  margin-left: 2%;
  font-size: 30rpx;
  color: #ccc;
}

.info-head::after {
  content: '';
  position: absolute;
  display: block;
  margin-top: -20rpx;
  height: 1px;
  width: 96%;
  background-color: rgba(180, 180, 180, 0.3);
}

.sale {
  width: 100%;
  height: 550rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 2.2rem;
}

.saleTitle {
  font-size: 30rpx;
  height: 80rpx;
  width: 95%;
  margin-left: 2.5%;
}

.saleTitleText {
  float: left;
  height: 80rpx;
  line-height: 80rpx;
}

.saleTitlePrice {
  float: right;
  height: 80rpx;
  line-height: 80rpx;
}

.couponImg {
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.toRightImg {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.couponText {
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}

.couponPrice {
  float: right;
  height: 80rpx;
  line-height: 80rpx;
}

.line::after {
  content: '';
  position: absolute;
  display: block;
  margin-top: 80rpx;
  height: 1px;
  width: 95%;
  background-color: rgba(180, 180, 180, 0.3);
}
