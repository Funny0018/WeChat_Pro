.line::after {
  content: '';
  position: absolute;
  display: block;
  margin-top: 30rpx;
  height: 1px;
  width: 80%;
  background-color: rgba(180, 180, 180, 0.3);
}

.lines::after {
  content: '';
  position: absolute;
  display: block;
  margin-top: 20rpx;
  height: 1px;
  width: 83%;
  background-color: rgba(180, 180, 180, 0.3);
}

