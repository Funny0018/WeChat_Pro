/* pages/address/address.wxss */

.address-page {
  background-color: #eee;
}

.address-top {
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.search {
  margin-top: 20rpx;
  width: 700rpx;
  height: 50rpx;
  font-size: 30rpx;
  background-color: #ddd;
  display: inline-block;
  border-radius: 40rpx;
  margin-left: 26rpx;
}

.province {
  margin-left: 30rpx;
  float: left;
  height: 50rpx;
  line-height: 50rpx;
}

.key {
  float: left;
  width: 400rpx;
  color: #999;
}

.img-down {
  margin-left: 10rpx;
  margin-top: 5rpx;
  float: left;
  height: 40rpx;
  width: 40rpx;
}

.img-search {
  margin-left: 20rpx;
  margin-top: 5rpx;
  float: left;
  height: 40rpx;
  width: 40rpx;
}

.local-top {
  height: 50rpx;
  width: 700rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.local-text {
  float: left;
  color: #aaa;
  margin-left: 15rpx;
}

.local-new {
  color: #f60;
  float: right;
}

.local-bottom {
  height: 50rpx;
  width: 700rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-left: 20rpx;
  font: 50rpx;
}

.img-local {
  margin-left: 20rpx;
  margin-top: 8rpx;
  float: left;
  height: 40rpx;
  width: 40rpx;
}

.local-address {
  width: 500rpx;
  font-size: 35rpx;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
}

.img-reflash {
  margin-left: 20rpx;
  margin-top: 5rpx;
  float: right;
  height: 40rpx;
  width: 40rpx;
}

.address-list {
  background-color: #fff;
  width: 100%;
  margin-top: 15rpx;
}

.list-title {
  font-size: 35rpx;
  color: #ddd;
  margin-left: 20rpx;
  height: 20rpx;
  width: 100%;
}

.address-info {
  height: 100rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
  width: 100%;
}

.address-info::after {
  content: '';
  position: absolute;
  display: block;
  margin-top:90rpx;
  right: 10%;
  height: 1px;
  width: 100%;
  background-color: rgba(180, 180, 180, 0.3);
}

.info-title {
  float: left;
  width: 700rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  font-size: 35rpx;
}

.info-address {
  float: left;
  color: #ddd;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  font-size: 30rpx;
}
